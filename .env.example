# ========================================
# VARIÁVEIS DE AMBIENTE - SISTEMA VENDACERTA
# ========================================
# Copie este arquivo para .env e preencha com valores reais
# NUNCA commite .env com dados sensíveis no Git!

# ========================================
# FLASK - Configurações Principais
# ========================================
FLASK_SECRET_KEY=seu-secret-key-aqui-minimo-32-caracteres-aleatorios-use-secrets-token-urlsafe
FLASK_ENV=production
FLASK_DEBUG=False

# ========================================
# DATABASE - PostgreSQL (Railway Produção)
# ========================================
# Railway fornece automaticamente DATABASE_URL - não precisa configurar manualmente
# Formato: postgresql://user:password@host:5432/database
DATABASE_URL=postgresql://user:password@host:5432/database_name

# Variáveis individuais (Railway também fornece):
PGDATABASE=railway
PGHOST=containers-us-west-xxx.railway.app
PGPORT=5432
PGUSER=postgres
PGPASSWORD=sua-senha-segura-aqui

# ========================================
# DATABASE - Local Development (SQLite)
# ========================================
# Deixe DATABASE_URL vazio ou comente para usar SQLite local
# DATABASE_URL=

# ========================================
# SERVIDOR - Configurações
# ========================================
PORT=5000
HOST=0.0.0.0
WEB_CONCURRENCY=2
GUNICORN_TIMEOUT=120

# ========================================
# SESSÃO - Segurança
# ========================================
SESSION_PERMANENT_LIFETIME=86400
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# ========================================
# SQLALCHEMY - Pool de Conexões
# ========================================
SQLALCHEMY_POOL_SIZE=5
SQLALCHEMY_MAX_OVERFLOW=10
SQLALCHEMY_POOL_TIMEOUT=30
SQLALCHEMY_POOL_RECYCLE=280
SQLALCHEMY_TRACK_MODIFICATIONS=False

# ========================================
# SEGURANÇA - Rate Limiting
# ========================================
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_LOGIN=5 per minute
RATELIMIT_API=100 per hour

# ========================================
# LOGGING - Configurações
# ========================================
LOG_LEVEL=INFO
LOG_TO_STDOUT=True

# ========================================
# BACKUP - Configurações Automáticas
# ========================================
BACKUP_ENABLED=True
BACKUP_SCHEDULE=daily
BACKUP_RETENTION_DAYS=30
BACKUP_AUTO_CLEANUP=True

# ========================================
# FEATURES - Funcionalidades
# ========================================
ENABLE_COMPRESSION=True
ENABLE_CACHE=True
ENABLE_BACKUP=True
ENABLE_NOTIFICATIONS=True
ENABLE_EMAIL=False

# ========================================
# ADMIN - Usuário Padrão (Primeira Inicialização)
# ========================================
ADMIN_EMAIL=admin@vendacerta.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrador

# ========================================
# EMAIL - SMTP (Opcional)
# ========================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=seu-email@gmail.com
# MAIL_PASSWORD=sua-senha-de-app
# MAIL_DEFAULT_SENDER=noreply@vendacerta.com

# ========================================
# MONITORAMENTO - Sentry (Opcional)
# ========================================
# SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
# SENTRY_ENVIRONMENT=production
# SENTRY_TRACES_SAMPLE_RATE=0.1

# ========================================
# RAILWAY - Variáveis Automáticas (Não Configurar)
# ========================================
# Estas são fornecidas automaticamente pelo Railway:
# RAILWAY_ENVIRONMENT=production
# RAILWAY_PROJECT_ID=xxx
# RAILWAY_SERVICE_ID=xxx
# RAILWAY_DEPLOYMENT_ID=xxx
# RAILWAY_GIT_COMMIT_SHA=xxx
# RAILWAY_GIT_BRANCH=main

# ========================================
# DESENVOLVIMENTO - Apenas Local
# ========================================
# Descomenteapenas para desenvolvimento local:
# FLASK_ENV=development
# FLASK_DEBUG=True
# DATABASE_URL=
# INIT_DB_ONLY=0
